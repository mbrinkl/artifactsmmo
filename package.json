{
  "name": "artifacts",
  "workspaces": [
    "packages/shared",
    "packages/client",
    "packages/server"
  ],
  "scripts": {
    "openapi-gen": "npm run openapi-gen --workspace=packages/shared",
    "server": "npm run dev --workspace=packages/server",
    "client": "npm run dev --workspace=packages/client",
    "dev": "concurrently -c cyan,magenta npm:server npm:client",
    "prod": "cross-env NODE_ENV=production node --env-file=.env dist/index.js",
    "build": "npm run build --workspaces",
    "postbuild": "rm -rf ./dist && cp -r packages/server/dist/ ./dist && cp -r packages/client/dist ./dist/static && cp -r packages/server/src/db/migrations ./dist/migrations",
    "lint": "eslint .",
    "typecheck": "npm run typecheck --workspaces",
    "check": "npm run lint && npm run typecheck",
    "test": "echo no tests"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.9.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  }
}

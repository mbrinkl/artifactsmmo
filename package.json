{
  "name": "artifacts",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "openapi-gen": "openapi-typescript https://api.artifactsmmo.com/openapi.json -o ./packages/shared/schema.d.ts",
    "server": "npm run dev --workspace=packages/server",
    "client": "npm run dev --workspace=packages/client",
    "start": "concurrently -c cyan,magenta npm:server npm:client",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.9.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  }
}

{
  "name": "@artifacts/server",
  "version": "0.0.0",
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "dev": "cross-env NODE_ENV=development tsx watch --clear-screen=false --env-file=../../.env src/index.ts",
    "build": "npm run db:generate && esbuild src/index.ts --bundle --outdir=dist --platform=node",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@artifacts/shared": "file:../shared",
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^8.0.2",
    "@libsql/client": "^0.14.0",
    "drizzle-orm": "^0.36.3",
    "fastify": "^5.1.0",
    "openapi-fetch": "^0.13.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.28.1",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.2"
  }
}
